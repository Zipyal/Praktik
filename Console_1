using System;
namespace Example
{
    class Program
    {
        static void Main()
        {
            Console.Write("Значение стороны равностороннего треугольника= ");
            int p = Convert.ToInt32(Console.ReadLine());
            double s = p * p * Math.Sqrt(3) / 4;
            Console.Write("Площадь равностороннего треугольника= ");
            Console.WriteLine(s);
            Console.ReadLine();
 
        }
    }
}
